<h1>Sign Up</h1>
<% if flash.has?(:message) %>
  <%flash[:message].each do |key,value|%>
  <%="#{key}: #{value}"%><br>
  <%end%>
<%end%>

<br>
<form action="/signup" method="POST">
  <label>Name: </label><input type="text" name="name" id="name"> </input><br><br>
  <label>Username: </label><input type="text" name="username" id="username"> </input><br><br>
  <label>Password: </label><input type="text" name="password" id="password"> </input>
  <input type="submit" value="Sign Up">
</form>
