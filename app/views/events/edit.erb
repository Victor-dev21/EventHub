<h3>Edit the event</h3>
<form method="post" action="/events/<%=@event.id%>">
  	<input type="hidden" name="_method" value="patch">
  <label>Event Name: </label><input name="event[event_name]" value="<%=@event.event_name%>"> </input><br><br>
  <label>Location: </label><input name="location[name]" value="<%=@event.location.locale%>"> </input><br><br>
  <label>Event Time: </label> <input value="<%=@event.time%>"type="time" id="time" name="event[time]" min="00:00" max="24:00" required><br>
  <label>Event Date: </label> <input value="<%=@event.date%>" type="date" id="date" name="event[date]" required><br>
  <% @categories.each do |category| %>
   <input type="radio" name="category[category_id]" id="<%= category.id %>" value="<%=category.id %>" <%="checked" if category.id == @event.category_id%>><%= category.name %></input><br>
   <% end %>
   public: <input type="checkbox" name="event[public]" <%="checked" if @event.public%>> <br>
   Or create a new Category: <input type="text" name="category_name">
  <input type="submit" value="Update">
</form>
